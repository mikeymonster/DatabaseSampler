@model DatabaseSampler.Application.ViewModels.CosmosItemsViewModel

@{
    ViewData["Title"] = "CosmosDB";
}

<h1>CosmosDB</h1>

<h2>Do some cool things in the cloud with Cosmos DB.</h2>

<p>Existing items</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Frequency</th>
            <th>Start Date</th>
            <th>Monthly Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Expenses)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Amount</td>
                <td>@item.Frequency</td>
                <td>@item.StartDate</td>
                <td>@item.MonthlyCost</td>
